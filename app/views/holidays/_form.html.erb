<%= form_for @holiday, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :holiday_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :holiday_at, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :country, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :country, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                holidays_path, :class => 'btn' %>
  </div>
<% end %>
